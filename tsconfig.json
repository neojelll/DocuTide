{
  "compilerOptions": {
    "module": "commonjs",
    "declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "allowSyntheticDefaultImports": true,
    "target": "ES2021",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "forceConsistentCasingInFileNames": true,
    "noImplicitAny": false,
    "strictBindCallApply": false,
    "noFallthroughCasesInSwitch": false,
    "paths": {
      "@lib/documentation": [
        "libs/documentation/src"
      ],
      "@lib/documentation/*": [
        "libs/documentation/src/*"
      ],
      "@lib/project": [
        "libs/project/src"
      ],
      "@lib/project/*": [
        "libs/project/src/*"
      ],
      "@lib/user": [
        "libs/user/src"
      ],
      "@lib/user/*": [
        "libs/user/src/*"
      ]
    }
  }
}