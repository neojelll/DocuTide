datasource db {
  provider = "postgresql"
  url = env("POSTGRES_URL")
}

generator client {
  provider = "prisma-client-js"
}

model user {
  userId           String   @id @default(cuid())
  email        String   @unique
  username     String   @unique
  hashPassword String
  bio          String?
  role         String   @default("user")
  createdAt    DateTime @default(now())
  updatedAt    DateTime @updatedAt
}
